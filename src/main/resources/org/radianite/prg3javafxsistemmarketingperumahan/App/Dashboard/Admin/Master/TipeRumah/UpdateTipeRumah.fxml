<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane fx:controller="org.radianite.prg3javafxsistemmarketingperumahan.Controller.TipeRumah.Update" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.111">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    <Label text="ID Tipe Rumah:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="idTipeRumahField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
    <Label text="Nama:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="namaField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    <!-- Tambahkan field lainnya sesuai kebutuhan -->
    <Button text="Update" onAction="#handleUpdateAction" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
</GridPane>
